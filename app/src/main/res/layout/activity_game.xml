<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/game_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="O X"
        android:textColor="@color/card_color"
        android:textSize="130dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img00"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img01"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/img00"
            android:layout_marginStart="100dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img02"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/img01"
            android:layout_marginStart="100dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/img00"
            android:layout_marginTop="100dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/img01"
            android:layout_marginTop="100dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/img02"
            android:layout_marginTop="100dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img20"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/img10"
            android:layout_marginTop="100dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img21"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/img11"
            android:layout_marginTop="200dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/img22"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/img12"
            android:layout_marginTop="200dp"
            android:background="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#52F60C"
            android:ems="8"
            android:text="Play Again"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E30B0B"
            android:ems="8"
            android:text="Quit"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>