<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66D52A">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/users_pic"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_profile_24" />

        <TextView
            android:id="@+id/users_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:text="Name"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/users_pic"
            android:layout_marginLeft="90dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/users_name"
            android:layout_alignStart="@+id/users_name"
            android:backgroundTint="#16CCBD"
            android:layout_marginTop="25dp"
            android:text="Send Request"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>